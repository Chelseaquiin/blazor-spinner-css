<div class="lds-grid" style=@($"width: {Size}px; height: {Size}px;")>

    @for (int i = 0; i < 9; i++)
    {
        <div style="@($"background-color: {Color}")" />
    }

</div>

@code {
    [Parameter] public int Size { get; set; } = 60;

    [Parameter] public string Color { get; set; } = "#7f58af";
}
